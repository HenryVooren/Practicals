BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: number_label
            text: '34'
            font_size: 48
            color: (1, 1, 1, 1)
            on_text: app.handle_update()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.step_number(+1)
            Button:
                text: 'Down'
                on_press: app.step_number(-1)
    #Button:
    #    text: 'Convert m to km'
    #    on_press: app.convert_miles(number_label.text)
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 1, 1)